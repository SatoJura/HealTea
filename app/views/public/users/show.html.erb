<div class="row d-flex align-items-center text-center">
    <div class="col-lg-2 my-3">
      <h3>My page</h3>
    </div>
    <div class="col-lg-4">
      <%= attachment_image_tag current_user, :profile_image_id, size:'300x300', format: 'jpg', fallback: 'ornament.jpg' %>
    </div>

    <div class="col-lg-6">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>ニックネーム</td>
          <td><%= current_user.nickname %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= current_user.email %></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center">
      <%= link_to "編集する", edit_users_path(current_user), class:"btn" %>
    </div>
    </div>
</div>
