<div class="container d-flex justify-content-center">
  <div>
    <div class="mb-3">
      <h2>新規登録</h2>
    </div>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "public/users/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <%= f.label :nickname, "ニックネーム（2文字以上、10文字以下）" %><br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, "パスワード（6文字以上）" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "登録" %>
      </div>
    <% end %>

    <div class="mt-3">
      <p>登録済みの方
      →<%= render "public/users/shared/links" %></p>
    </div>
  </div>
</div>